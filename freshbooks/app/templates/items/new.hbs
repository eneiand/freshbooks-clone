<div class='row'>
    <div class='small-2 columns'>
        <h3>New Item</h3>
    </div>
    <div {{bind-attr class=':small-7 :columns itemCreated::hide'}}>
        <div data-alert class='alert-box success radius'>
        Item created
        <a href="#" {{action clearItemCreated}} class="close">&times;</a>
    </div>
    </div>
    <div {{bind-attr class=':small-7 :columns validationError::hide'}}>
        <div data-alert class='alert-box alert radius'>
        Validation error
        <a href="#" {{action clearValidationError}} class="close">&times;</a>
    </div>
    </div>

    <hr/>
</div> 
    
</div>
<form>
    <div class='row'>
        <div class="small-3 columns">
          <label for="right-label" class="right inline">Item Name</label>
        </div>
        <div class="small-4 columns left">
          {{input type='text' value=name}}
        </div>
    </div>
    <div class='row'>
        <div class="small-3 columns">
          <label class="right">Description</label>
        </div>
        <div class="small-5 columns left">
          {{textarea value=description}}
        </div>
    </div>
    <div class='row'>
        <div class="small-3 columns">
          <label class="right inline">Unit Cost</label>
        </div>
        <div class="small-2 columns left">
          {{input type='text' value=cost}}
        </div>
    </div>
    <div class='row'>
        <div class="small-3 columns">
          <label class="right inline">Quantity</label>
        </div>
        <div class="small-2 columns left">
            {{input type='text' value=quantity}}
        </div>
    </div>
    <div class='row'>
        <div class="small-3 columns">
          <label for="right-label" class="right inline">Taxes</label>
        </div>
        <div class="small-2 columns left">
           <select>
               <option value=""></option>
                <option value="VAT">VAT</option>
            </select>
            
        </div>
        <div class="small-2 columns left">
           <select>
               <option value=""></option>
                <option value="VAT">VAT</option>
        </select>
            
        </div>
    </div>
    <div class="row">
            <div class="small-3 columns">
            <label for="right-label" class="right ">Track Inventory</label>
            </div>
            <div class="small-2 left columns">
                 {{input type='checkbox' checked=trackInventory}}
            </div>
    </div>
    <div id='new-item-btns' class='row'>
  <div class='small-8 columns small-offset-2'>
    <ul class="button-group">
        <li><a href="#" {{action 'save'}} class="button large success radius">Save</a></li>
  <li><a href="#" {{action 'saveAndAdd'}} class="button large success radius">Save and Add Another</a></li>
</ul>
  </div>
</div>
</form>