<div class='row'>
    <div class='small-9 columns'>
        <h3>Tasks</h3>
    </div>
    {{link-to '+ New Task' 'tasks.new' class='button success right'}}
</div>
<div class='row'>
    <div class='small-12 columns'>
        <table>
            <thead>
                <tr>
                    <th width="10"></th>
                    <th width='150'>Task Name</th>
                    <th width="200">Description</th>
                    <th width="150">Billable?</th>
                    <th width="150">Rate(Â£)</th>
                    <th width="150"></th>
                </tr>
            </thead>
            <tbody>
                {{#each}}
                <tr>
                    <td></td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{billToClient}}</td>
                    <td>{{ratePerHour}}</td>
                    <td></td>
                </tr>
                {{else}}
                <tr>
                    <td class='text-center' colspan='8'>No tasks were found. {{link-to 'Create a task' 'tasks.new'}}.

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>